---
import TechTags from './TechTags.astro';

interface Props {
  company: string;
  logo: string;
  role: string;
  startDate: string;
  endDate: string;
  bullets: string[];
  tags: string[];
}

const { company, logo, role, startDate, endDate, bullets, tags } = Astro.props;
---

<div class="scroll-reveal opacity-0 translate-y-6 transition-all duration-700 ease-out bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover:shadow-lg hover:-translate-y-1">
  <div class="flex items-center gap-4 mb-4">
    <img src={logo} alt={company} class="w-12 h-12 rounded object-cover" />
    <div>
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{company}</h3>
      <p class="text-sm text-gray-500 dark:text-gray-400">
        {startDate} &rarr; {endDate}
      </p>
    </div>
  </div>
  <p class="font-semibold text-gray-800 dark:text-gray-200 mb-3">{role}</p>
  <ul class="list-disc list-inside space-y-1.5 text-sm text-gray-600 dark:text-gray-400">
    {bullets.map((bullet) => (
      <li set:html={bullet} />
    ))}
  </ul>
  <TechTags tags={tags} />
</div>
