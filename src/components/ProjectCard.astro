---
import TechTags from './TechTags.astro';

interface Props {
  title: string;
  url: string | null;
  startDate: string;
  endDate: string | null;
  bullets: string[];
  tags: string[];
}

const { title, url, startDate, endDate, bullets, tags } = Astro.props;
---

<div class="scroll-reveal opacity-0 translate-y-6 transition-all duration-700 ease-out bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover:shadow-lg hover:-translate-y-1">
  <div class="mb-3">
    {url ? (
      <h3 class="text-xl font-semibold">
        <a href={url} target="_blank" rel="noopener noreferrer" class="text-emerald-600 dark:text-emerald-400 hover:underline">
          {title}
        </a>
      </h3>
    ) : (
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{title}</h3>
    )}
    <p class="text-sm text-gray-500 dark:text-gray-400">
      {startDate}{endDate ? ` \u2192 ${endDate}` : ''}
    </p>
  </div>
  <ul class="list-disc list-inside space-y-1.5 text-sm text-gray-600 dark:text-gray-400">
    {bullets.map((bullet) => (
      <li set:html={bullet} />
    ))}
  </ul>
  <TechTags tags={tags} />
</div>
