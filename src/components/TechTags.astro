---
interface Props {
  tags: string[];
}
const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2 mt-4">
  {tags.map((tag) => (
    <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 transition-colors hover:bg-gray-200 dark:hover:bg-gray-600">
      {tag}
    </span>
  ))}
</div>
