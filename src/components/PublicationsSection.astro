---
import SectionHeading from './SectionHeading.astro';
import publications from '../data/publications.json';
---

<section class="py-12 px-6">
  <div class="max-w-4xl mx-auto">
    <SectionHeading title="Publications" />
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 space-y-6">
      {publications.map((pub) => (
        <div>
          <p class="text-lg font-medium text-gray-900 dark:text-white">
            <span class="text-gray-500 dark:text-gray-400">{pub.year}</span>
            {' - '}
            <a href={pub.url} target="_blank" rel="noopener noreferrer" class="text-emerald-600 dark:text-emerald-400 hover:underline">
              {pub.title}
            </a>
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{pub.authors}</p>
        </div>
      ))}
    </div>
  </div>
</section>
